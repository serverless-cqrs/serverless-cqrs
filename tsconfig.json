{
  "compilerOptions": {
    "lib": ["ES2020"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop":true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "strict": true,
    "rootDirs": ["./packages/*"]
  },
}
